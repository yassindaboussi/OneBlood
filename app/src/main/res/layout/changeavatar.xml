<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:layout_width="337dp"
        android:layout_height="461dp"
        app:cardCornerRadius="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ssssssssssssssssssssssssssssss"
                android:textColor="#93989C"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ssss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundedcadre"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#F34336"
                android:gravity="center"
                android:text="Change Avatar"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#93989C"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/previewUserImage"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Picture"
                    android:textColor="#93989C"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar1" />

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar2" />

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar4"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar4" />

                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar5" />

                <ImageView
                    android:id="@+id/avatar6"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar7"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar7" />

                <ImageView
                    android:id="@+id/avatar8"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar8" />

                <ImageView
                    android:id="@+id/avatar9"
                    android:layout_width="137dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:src="@drawable/avatar9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SavebtnAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:background="#36474F"
                    android:text="SAVE"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>